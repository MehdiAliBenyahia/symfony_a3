{% extends 'admin.html.twig' %}

{% block content %}
    <h1>{{ class.title }}</h1>

    <table class="table">
        <tbody>
            <tr>
                <th>Id</th>
                <td>{{ class.id }}</td>
            </tr>
            <tr>
                <th>Titre</th>
                <td>{{ class.title }}</td>
            </tr>
            <tr>
                <th>Catégorie</th>
                <td>{{ class.category.label }}</td>
            </tr>
            <tr>
                <th>Description</th>
                <td>{{ class.description }}</td>
            </tr>
            <tr>
                <th>Date de création</th>
                <td>{{ class.dateCreated ? class.dateCreated|date('Y-m-d H:i:s') : '' }}</td>
            </tr>
            <tr>
                <th>Slug</th>
                <td>{{ class.slug }}</td>
            </tr>
        </tbody>
    </table>

    <div class="row">
        <a class="btn btn-primary" href="{{ path('classes_index') }}">Retour</a>
        &nbsp;&nbsp;
        <a class="btn btn-warning" href="{{ path('classes_edit', {'id': class.id}) }}">Modifier</a>
        &nbsp;&nbsp;
        {{ include('classes/_delete_form.html.twig') }}
    </div>


{% endblock %}
