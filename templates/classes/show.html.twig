{% extends 'base.html.twig' %}

{% block title %}Classes{% endblock %}

{% block body %}
    <h1>Classes</h1>

    <table class="table">
        <tbody>
            <tr>
                <th>Id</th>
                <td>{{ class.id }}</td>
            </tr>
            <tr>
                <th>Title</th>
                <td>{{ class.title }}</td>
            </tr>
            <tr>
                <th>Description</th>
                <td>{{ class.description }}</td>
            </tr>
            <tr>
                <th>Date_created</th>
                <td>{{ class.dateCreated ? class.dateCreated|date('Y-m-d H:i:s') : '' }}</td>
            </tr>
            <tr>
                <th>Slug</th>
                <td>{{ class.slug }}</td>
            </tr>
        </tbody>
    </table>

    <a href="{{ path('classes_index') }}">back to list</a>

    <a href="{{ path('classes_edit', {'id': class.id}) }}">edit</a>

    {{ include('classes/_delete_form.html.twig') }}
{% endblock %}
