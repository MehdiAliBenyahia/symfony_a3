{% extends 'admin.html.twig' %}

{% block content %}
    <h1>Category</h1>

    <table class="table">
        <tbody>
            <tr>
                <th>Id</th>
                <td>{{ category.id }}</td>
            </tr>
            <tr>
                <th>Label</th>
                <td>{{ category.label }}</td>
            </tr>
        </tbody>
    </table>
    <div class="row">
        <a class="btn btn-primary" href="{{ path('category_index') }}">Retour</a>
        &nbsp;&nbsp;
        <a class="btn btn-warning" href="{{ path('category_edit', {'id': category.id}) }}">Modifier</a>
        &nbsp;&nbsp;
        {{ include('category/_delete_form.html.twig') }}
    </div>
{% endblock %}
