{% extends 'base.html.twig' %}

{% block content %}
    <div class="container">
        <form method="post">
            {% if error %}
                <div class="alert alert-danger">{{ error.messageKey|trans(error.messageData, 'security') }}</div>
            {% endif %}
            <div class="text-center">
                <h1 class="h3 mb-3 font-weight-normal">Authentification</h1>
            </div>
            <hr>
            <div class="row">
                <div class="col-12 col-sm-12 col-md-6 col-lg-6 col-xl-6">
                    <div class="input-group mb-3">
                        <div class="input-group-prepend">
                            <span class="input-group-text" id="basic-addon1">Email</span>
                        </div>
                        <input type="email" name="email" id="inputEmail" class="form-control" placeholder="Saisir..." aria-label="Email" aria-describedby="basic-addon1">
                    </div>
                </div>
                <div class="col-12 col-sm-12 col-md-6 col-lg-6 col-xl-6">
                    <div class="input-group mb-3">
                        <div class="input-group-prepend">
                            <span class="input-group-text" id="basic-addon2">Mot de passe</span>
                        </div>
                        <input name="password" type="password" id="inputPassword" class="form-control" placeholder="Saisir..." aria-label="Password" aria-describedby="basic-addon2" required>
                    </div>
                </div>
            </div>
            <input type="hidden" name="_csrf_token" value="{{ csrf_token('authenticate') }}">
            {#
            Uncomment this section and add a remember_me option below your firewall to activate remember me functionality.
            See https://symfony.com/doc/current/security/remember_me.html
            <div class="checkbox mb-3">
                <label>
                    <input type="checkbox" name="_remember_me"> Remember me
                </label>
            </div>
            #}
            <hr>
            <div class="text-center">
                <button class="btn btn-lg btn-primary" type="submit">
                    Connexion
                </button>
            </div>
        </form>
    </div>
{% endblock %}
